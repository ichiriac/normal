    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Tests",
            "request": "launch",
            "runtimeArgs": [
                "run-script",
                "test"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Blog Demo",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "env": {
                "DEBUG": "knex"
            },
            "program": "${workspaceFolder}/demo/blog/index.js"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch CRM Demo",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "env": {
                "DEBUG": "knex"
            },
            "program": "${workspaceFolder}/demo/crm/index.js"
        }
    ]
}